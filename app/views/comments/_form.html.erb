   <div class="col-md-8">
     <%= form_for [post, post.comments.new] do |f| %>
       <div class="form-group">
         <p></p>
         <%= f.label :Comments %>
         <%= f.text_area :body, rows: 2, class: 'form-control', placeholder: "Enter comment" %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>